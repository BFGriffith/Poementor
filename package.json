{
  "name": "Poementor",
  "version": "0.0.0",
  "description": "a “M.E.A.N.-stack” (Mongo, Express, Angular, Node) application for aspiring poets and lyricists that streamlines composing, editing, annotating, storing, and sharing all sorts of verse — as well as providing dynamic templating, modeling, and tutorial functionalities that conveniently aid writers in more easily conforming to various traditional poetical forms, metrical prosody structures, rhyme-schemes, etc.",
  "main": "server.js",
  "engines": {
    "node": "5.11.0",
    "npm": "3.8.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BFGriffith/Poementor.git"
  },
  "keywords": [
    "Angular",
    "Node",
    "Express",
    "MongoDB",
    "Mongoose",
    "body-parser",
    "babel",
    "Gulp"
  ],
  "license": "SEE LICENSE IN license.md",
  "devDependencies": {
    "angular-jsdoc": "^1.3.3",
    "angular-mocks": "^1.5.2",
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "browser-sync": "^2.11.1",
    "gulp": "^3.9.1",
    "gulp-angular-templatecache": "^1.8.0",
    "gulp-clean": "^0.3.2",
    "gulp-concat": "^2.6.0",
    "gulp-inject": "^4.0.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.2.0",
    "gulp-util": "^3.0.7",
    "jasmine-core": "^2.4.1",
    "jsdoc": "^3.4.0",
    "karma": "^0.13.22",
    "karma-jasmine": "^0.3.8",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "lodash": "^4.6.1",
    "phantomjs-prebuilt": "^2.1.6",
    "raw-loader": "^0.5.1",
    "shelljs": "^0.3.0",
    "webpack": "^1.12.14"
  },
  "scripts": {
    "test": "karma start",
    "start": "gulp",
    "build": "gulp build",
    "docs": "gulp clean:docs && node node_modules/jsdoc/jsdoc.js src/ -d docs -r README.md -c node_modules/angular-jsdoc/common/conf.json -t docs/template"
  },
  "dependencies": {
    "angular": "^1.5.2",
    "angular-animate": "^1.5.2",
    "angular-sanitize": "^1.5.2",
    "angular-ui-router": "^0.2.18",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "method-override": "^2.3.6",
    "moment": "^2.12.0",
    "mongoose": "^4.5.10",
    "morgan": "^1.7.0",
    "passport": "^0.3.2",
    "redux": "^3.3.1"
  }
}
